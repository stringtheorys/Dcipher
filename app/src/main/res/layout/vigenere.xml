<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:id="@+id/MenuButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vigenere"
                android:textSize="35dp"
                android:textColor="#000000"
                android:id="@+id/topLabel"
                android:layout_below="@+id/MenuButton"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plain Text"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:id="@+id/plaintextLabel"
                android:layout_below="@+id/topLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PlainTextET"
                android:width="200dp"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@+id/plaintextLabel"
                android:layout_toRightOf="@+id/plaintextLabel"
                android:layout_toEndOf="@+id/plaintextLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:id="@+id/KeyLabel"
                android:layout_below="@+id/plaintextLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/KeyET"
                android:width="200dp"
                android:layout_alignTop="@+id/KeyLabel"
                android:layout_alignLeft="@+id/PlainTextET"
                android:layout_alignStart="@+id/PlainTextET" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encryption"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/encrypButton"
                android:layout_centerVertical="true"
                android:layout_below="@+id/KeyLabel"
                android:layout_marginTop="20dp"
                android:layout_alignLeft="@+id/KeyLabel"
                android:layout_alignStart="@+id/KeyLabel" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decryption"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/decryptButton"
                android:layout_alignTop="@+id/encrypButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cipher Text :"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:id="@+id/CipherTextTV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/decryptButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cipher Description :\n"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:id="@+id/CipherDescription"
                android:layout_below="@+id/CipherTextTV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>